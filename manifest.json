{
  "manifest_version": 2,
  "name": "9fuy âœª LGTM GIF",
  "description": "Approve with anime gif",
  "author": "9fury",
  "version": "1.0",

  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "permissions": [
    "tabs",
    "cookies",
    "http://*/*",
    "https://*/*",
    "notifications",
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "*://github.com/*"
  ],

  "content_scripts": [
    {
      "css": ["css/custom.css"],
      "js": ["js/custom.js"],
      "matches": ["*://github.com/*"]
    },
    {
      "css": ["css/kirito.css"],
      "js": ["js/kirito.js"],
      "matches": ["*://github.com/Parkboyoung11*"]
    }
  ],

  "web_accessible_resources": [
    "js/BeautyScroll.js"
  ],

  "page_action": {
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "default_popup": "popup.html" 
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://maxcdn.bootstrapcdn.com https://apis.google.com https://ajax.googleapis.com https://cdnjs.cloudflare.com; object-src 'self'",

  "background": {
    "scripts": ["js/background.js"],
    "persistent": true
  }
}